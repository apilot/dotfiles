{
  "vim_mode": true,
  "ui_font_size": 16,
  "active_pane_magnification": 1.0,
  "current_line_highlight": "all",
  "buffer_font_family": "FiraCodeNFM-Ret",
  "buffer_font_size": 14,
  "buffer_font_weight": 100,
  "buffer_font_features": {
    "calt": true
  },
  "format_on_save": "on",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "One Dark"
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      },
      "settings": {
        "use_bundler": false
      }
    }
  }
}
